@foreach(var review in Reviews)
{
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@review.Image" class="img-fluid rounded-start" alt="@review.Anime">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@review.Anime</h5>
                    <p class="card-text">@review.Content</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <a href="/anime-review" class="btn btn-primary">See this review</a>
                    @*<Review SelectedReview="@review"/>*@
                </div>
            </div>
        </div>
    </div>
}

